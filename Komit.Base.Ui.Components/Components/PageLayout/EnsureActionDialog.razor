<div class="modal is-active">
    <div class="modal-background"></div>
    <div class="modal-content">
        <div class="d-flex justify-content-between p-1 m-1 align-items-center">
            <div></div>
            <h3 class="h-100 h3-size-dialog f-flex align-items-center">@Title</h3>
            <button class="fa-solid fa-xmark button" @onclick=No></button>
        </div>        
            <div class="dialog-content">
                <div class="m-1 mb-4">@Message</div>
                <div class="d-flex justify-content-around">
                <button class="button dialog-Yes-button" @onclick=Yes>@YesText</button>
                <button class="button dialog-No-button" @onclick=No>@NoText</button>
                </div>
            </div>        
    </div>
</div>
@code {
    [Parameter] public string Title { get; set; }
    [Parameter] public string Message { get; set; }
    [Parameter] public string YesText { get; set; }
    [Parameter] public string NoText { get; set; }
    [Parameter] public Func<bool, Task> OnClose { get; set; }

    protected Task Yes() => OnClose.Invoke(true);
    protected Task No() => OnClose.Invoke(false);
}